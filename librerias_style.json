{
  "version": 8,
  "name": "Librerías - Livriz",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "osm": {
      "type": "raster",
      "tiles": ["https://tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "attribution": "© OpenStreetMap contributors"
    },
    "librerias": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/Livriz/mapalibrerias/main/mapalibrerias.geojson"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#ffffff" }
    },
    {
      "id": "osm-raster",
      "type": "raster",
      "source": "osm",
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "poi_librerias",
      "type": "circle",
      "source": "librerias",
      "filter": ["==", ["geometry-type"], "Point"],
      "paint": {
        "circle-radius": [
          "interpolate", ["linear"], ["zoom"],
          3, 3,
          8, 5,
          12, 7,
          16, 9
        ],
        "circle-color": "#0047bb",
        "circle-stroke-color": "#ffffff",
        "circle-stroke-width": 1
      },
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "poi_librerias_labels",
      "type": "symbol",
      "source": "librerias",
      "filter": ["==", ["geometry-type"], "Point"],
      "layout": {
        "text-field": [
          "coalesce",
          ["get", "name"],
          ["get", "Nombre"],
          ["get", "nombre"]
        ],
        "text-font": ["Noto Sans Regular"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          4, 10,
          10, 12,
          14, 14
        ],
        "text-offset": [0, 1.1],
        "text-anchor": "top",
        "text-allow-overlap": false
      },
      "paint": {
        "text-color": "#111111",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      },
      "minzoom": 3,
      "maxzoom": 24
    }
  ],
  "id": "livriz-librerias-style"
}
